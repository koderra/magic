mg-navbar.fixed .mg-navbar
  //background red
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background rgba(255,255,255,0.98)
  z-index 1

.mg-nav-image
  display block
  float left
  height "calc(%s - 10px)" % $mg-navbar-height
  padding-top 5px
  padding-bottom 5px
  padding-left 20px
  padding-right 20px
