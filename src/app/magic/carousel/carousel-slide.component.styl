.mg-carousel-slide
  height 100%
  width 100%
  position absolute
  opacity 1

  &.hidden
    opacity 0

  &.showing
    opacity 1

  &.fadein
    opacity 1
    animation mg-carousel-slide-fade-in 2s;

  &.fadeout
    opacity 0
    animation mg-carousel-slide-fade-out 2s;


@keyframes mg-carousel-slide-fade-in
{
  0%   {opacity:0}
  100% { opacity: 1}
}

@keyframes mg-carousel-slide-fade-out
{
  0%   {opacity:1}
  100% { opacity: 0}
}
