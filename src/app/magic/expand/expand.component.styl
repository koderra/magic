@import "."

.mg-expand
  width 100%

  .mg-expand-value
    display block
    float left
    width calc(100% - 30px)

  .mg-expander
    display block
    float right
    width $mg-expand-button-size
    cursor pointer
    padding-left 5px
    padding-right 5px

    &:hover
      background #f0f0f0


