mg-select-height = 30px

mg-input-border-color = #eeeeee
mg-input-border = 1px solid mg-input-border-color
mg-input-active-border = 1px solid #555555
mg-input-background = white
mg-input-placeholder-color = #dddddd
mg-input-text-color = #333333

// disabled
mg-input-disabled-background = #eeeeee

// decorator
mg-input-decorator-background = ''
mg-input-decorator-color = grey
mg-input-decorator-width = 20px

// activator
mg-input-activator-width = 20px
mg-input-activator-separator = 1px solid mg-input-border-color
mg-input-activator-background = ''
mg-input-activator-hover-background = yellowgreen
mg-input-activator-hover-color = white

// calcualed
mg-input-line-height-offset = mg-input-height - 2 * mg-input-border
mg-input-decorator-width-offset = mg-input-decorator-width + 2 * mg-input-border

