mg-input-border-color = #eeeeee
mg-input-border = 1px solid mg-input-border-color
mg-input-active-border = 1px solid #555555
mg-input-height = 30px
mg-input-background = white
mg-input-placeholder-color = #dddddd
mg-input-text-color = #333333
mg-input-padding = 5px

// disabled
mg-input-disabled-background = #eeeeee

// decorator
mg-input-decorator-background = ''
mg-input-decorator-color = grey
mg-input-decorator-width = 20px

// activator
mg-input-activator-width = 20px
mg-input-activator-separator = 1px solid mg-input-border-color
mg-input-activator-background = ''
mg-input-activator-hover-background = yellowgreen
mg-input-activator-hover-color = white

// calcualed
//mg-input-line-height-offset = mg-input-height //- 2 * mg-input-border
mg-input-decorator-width-offset = mg-input-decorator-width + 2 * mg-input-border
mg-activator-decorator-offset = mg-input-activator-width + mg-input-decorator-width + mg-input-activator-separator + mg-input-padding + 1px

.mg-input
  width "calc(100% - 2 * %s)" % mg-input-border
  height mg-input-height
  background mg-input-background
  border mg-input-border
  color mg-input-text-color

  .decorator
    display block
    float left
    position relative
    text-align center
    color mg-input-decorator-color
    background mg-input-decorator-background
    //background red
    width mg-input-decorator-width
    height 100%
    line-height mg-input-height

  .activator
    display block
    float right
    background mg-input-activator-background
    width mg-input-activator-width
    text-align center
    line-height mg-input-height
    color mg-input-decorator-color
    cursor pointer
    border-left mg-input-activator-separator

  > input
    height "calc(100% - 2 * %s)" % mg-input-border
    display block
    float left
    border 0
    padding-left mg-input-padding
    width "calc(100% - 1px - %s)" % mg-input-padding

  .has-activator
    width "calc(100% - %s)" % mg-input-activator-width

  .has-decorator
    padding-left 0
    width "calc(100% - %s)" % mg-input-decorator-width

  .has-ad
    padding-left 0
    width "calc(100% - %s)" % mg-activator-decorator-offset

  .activator:hover
    background mg-input-activator-hover-background
    color mg-input-activator-hover-color

.mg-input.focused
  border mg-input-active-border

