.mg-gallery
  width 100%
  height 100%
  display block
  cursor pointer

  > mg-img
    height 100px
    width 160px
    display block
    float left
    margin 5px

.mg-gallery-drag
  background #fafafa
  background-size: 30px 30px;
  background-image: linear-gradient(45deg, rgba(230, 230, 230, 0.1) 25%, transparent 25%, transparent 50%, rgba(230, 230, 230, 0.1) 50%, rgba(230, 230, 230, 0.1) 75%, transparent 75%, transparent);
  animation: barberpole 0.5s linear infinite;

@keyframes barberpole {
  from {
    background-position: 0 0;
  }
  to {
    background-position: 60px 30px;
  }
}
