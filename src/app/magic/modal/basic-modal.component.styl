default-modal-height = 500px
default-modal-width = 600px
default-modal-lead = 100px
modal-screen-color = rgba(150,150,150,0.7)

.mg-modal-screen
  z-index 100
  position fixed
  top 0
  left: 0
  width 100%
  height 100%
  background modal-screen-color

.mg-basic-modal-body
  //height default-modal-height
  //min-height default-modal-height
  width default-modal-width
  position relative
  left "calc(50% - %s)" % (default-modal-width / 2)
  top default-modal-lead
