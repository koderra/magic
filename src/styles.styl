// Colors
// ============================================

$color-default = #3ba2d8
$color-default-light = #7ec4ff
$color-default-lightest = #a7deff

// Typography
// ============================================

@import url('https://fonts.googleapis.com/css?family=Work+Sans:200,400,900');
//font-family: 'Work Sans', sans-serif;
primary-font-family = 'Work Sans', sans-serif;
primary-font-size = 14px

.emphasis
  font-size 1em

.quote
  font-size 20px
  font-style italic
  color #aaaaaa

.title
  font-size 40px
//font-weight 400
//text-transform uppercase

.subtitle
  font-size 30px
//font-weight 400
//text-transform uppercase

.label
  font-weight 400
  text-decoration underline

label
  font-weight 400
  text-decoration underline

.fine
  font-size 0.8em

.strong
  font-weight 400

strong
  font-weight 400

// Base sizes
// ============================================

$mg-navbar-height = 50px
$button-border = 0

/// other stuff

