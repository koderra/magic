// Base styles
// ============================================

body, html
  width 100%
  height 100%
  margin 0
  padding 0
  font-family primary-font-family
  font-size primary-font-size
  font-weight 300
  letter-spacing 0.5px
  color #444444

  *:focus
    outline: none

input, textarea, button
  font-family primary-font-family
  font-size primary-font-size
  font-weight 300

.center
  text-align center


// ============================================
// Style guide specific
// ============================================


.section-title
  color orangered
  font-size 50px
  margin-top 20px

.section-subtitle
  color orangered
  font-size 30px

.frame
  width 100%
  min-height 100%
  margin-top $mg-navbar-height

//background orangered

.content-frame
  width 70%
  margin auto
  overflow hidden
  margin-bottom 100px

  @media screen and (max-width: 1412px) {
    width 85%
  }

  @media screen and (max-width: 1369px) {
    width 90%
  }

  @media screen and (max-width: 1217px) {
    width 95%
  }

  @media screen and (max-width: 576px) {
    width calc(100% - 10px)
  }

  @media screen and (max-width: 400px) {
    width 100%
  }

  .optional
    @media screen and (max-width: 750px) {
      display none
    }

  .desktop .desktop-hide
    display none

  .mobile .mobile-hide
    display none


